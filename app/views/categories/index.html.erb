<div class="container ">
  <div class="row">
    <div class="col-xs-12">
      <h1 id="category-header">CATEGORIES</h1>
    </div>
  </div>
</div>

<div class="container category-list ">
  <div class="row">
  <% @categories.each do |category| %>
    <%if category.has_museums?%>
      <div class="col-xs-4">
        <h4 class="title">
          <a href="/categories/<%= category.id %>">
              <%= category.name.upcase %>
          </a>
        </h4>
      </div>
    <%end%>
  <%end%>
  </div>
</div>